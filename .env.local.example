# Пример конфигурации для локальной установки
# Скопируйте этот файл в .env и заполните своими данными

# База данных PostgreSQL
DATABASE_URL=postgresql://event_user:event_password@localhost:5432/event_management

# Telegram Bot Token (получить у @BotFather в Telegram)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Секретный ключ для сессий (генерируйте случайную строку)
SESSION_SECRET=your_very_long_random_secret_key_here

# Порт приложения (по умолчанию 5000)
PORT=5000

# Режим работы (development или production)
NODE_ENV=production

# Настройки CORS (для продакшн)
ALLOWED_ORIGINS=http://localhost:5000,https://yourdomain.com

# Настройки сессий
SESSION_MAX_AGE=86400000
SESSION_SECURE=false

# Лог уровень (error, warn, info, debug)
LOG_LEVEL=info